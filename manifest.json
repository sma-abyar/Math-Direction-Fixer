{
  "manifest_version": 2,
  "name": "Math Direction Fixer",
  "version": "1.2.0",
  "description": "Forces all math formulas to display in LTR direction on RTL pages.",

  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end"
  }],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}